{
  "compileOnSave": true,
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "baseUrl": ".",
  "include": ["./backend/**/*.js", "./backend/**/*.ts", "./backend/**/*.d.ts"],
  "exclude": ["node_modules", "src", "dist", "cypress.config.js"]
}
