{% extends "./partials/layout.njk" %}
{% from "./components/card.njk" import card %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% set title = 'Manage key workers' %}
{% set feedbackBannerBackground = '#f0f4f5 '%}

{% block main %}
  <div class="govuk-width-container">
    {{ govukBreadcrumbs({
      items: [
        {
          text: "Digital Prison Services",
          href: dpsUrl
        }
      ]
    }) }}

    <h1 class="govuk-heading-l govuk-!-margin-top-7">{{ title }}</h1>
  </div>

  <div class="govuk-width-container">

    {% set mainClasses = "govuk-main-wrapper--l" %}
    <div class="govuk-grid-row govuk-!-margin-top-7 govuk-!-margin-bottom-7">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">This service is currently unavailable</h1>
        <p class="govuk-body">
          You'll be able to use the Manage Key Workers service on DPS again from [6pm on Wednesday, 22 February 2023].
        </p>
      </div>
    </div>
  </div>

{% endblock %}
